{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dst",
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true
    },
    "exclude": [
        "**/__test__/"
    ],
    "include": [
        "src/**/*"
    ]
}
